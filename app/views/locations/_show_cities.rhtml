<% if @cities.empty? %>
	<h2>Ups, we didn't find a city for this location. </h2>
<% else %>
	<h2>select one city:</h2>
	<div class="left">
	  <table width="260px" height="100%">
	    <% for city in @cities %>
  	  <tr>
    	  <td class="oscura"><%= link_to city.name.capitalize, city %></td>
  	  </tr>
		  <% end %>
	  </table>
	</div>
<% end %>