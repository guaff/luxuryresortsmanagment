<h1>Editing location</h1>

<% form_for @location, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image, :class => "file" %>
  </p>
  <p>
    <%= f.submit "Update", :class => "submit" %>
  </p>
<% end %>

