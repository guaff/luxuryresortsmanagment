<h1>Editing blog</h1>

<% form_for(@blog) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :style => "width: 400px;" %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body , :cols => 110 %>
  </p>
  <p>
    <%= f.submit "Update", :class => "submit" %>
  </p>
<% end %>

