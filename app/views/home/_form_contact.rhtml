<% form_for(@people) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
		<%= f.hidden_field :where, :value => "contact" %>
  </p>
    

  <p>
    <%= f.submit "Contact Me", :class => 'submit' %>
  </p>
<% end %>