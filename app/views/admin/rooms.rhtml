<h2>Listing rooms</h2>

<%= link_to 'New room', new_room_path %><br/>

<table class="admin">
  <tr>
    <th>Code</th>
    <th>Availability</th>
    <th>Sale or rent</th>
  </tr>

<% for room in @rooms %>
  <tr>
    <td><%=h room.code %></td>
    <td><%=h room.availability %></td>
    <td><%=h room.sale_or_rent %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
