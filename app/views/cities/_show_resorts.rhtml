<% if @resorts.empty? %>
	<h4>Ups, we didn't find a resort for this city </h4>
<% else %>

	<h2>Select one resort:</h2>
	<div class="left">
	<table width="260px" height="100%">
	<% for resort in @resorts %>
  	<tr>
    	<td class="oscura"><%= link_to resort.name, resort %></td>
  	</tr>
		<% end %>
	</table>
	</div>

<% end %>
